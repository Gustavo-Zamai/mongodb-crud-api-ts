{
  "name": "api-mongo-node",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start:watch": "tsx --watch src/app.ts",
    "build": "tsup src/app.ts --format esm,cjs --dts --minify",
    "prod": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "pre-commit": "npm run lint && npm run format:check && npm test",
    "docker:build": "docker build -t api-mongo-node .",
    "docker:run": "docker run -p 3000:3000 api-mongo-node"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "ejs": "^3.1.8",
    "express": "^4.21.2",
    "http-errors": "~1.6.3",
    "mongodb": "^4.11.0",
    "mongoose": "^6.7.2",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "prettier": "^3.6.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
